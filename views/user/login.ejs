<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
      <h1 class="mb-3">Login to Palate Paradise</h1>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-3 offset-4">
      <form action="/user/login" method="post">
        <div class="mb-1">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter username"
            class="form-control"
            required
          />
        </div>
        <div class="mb-1">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn btn-danger offset-4 mt-1">Log In</button>
      </form>
      <!-- <p>Already Have An Account? <a href="./login.html">Sign In</a></p> -->
    </div>
  </div>
</body>
